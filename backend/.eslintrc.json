{
  "parser": "@typescript-eslint/parser",  // Specifies the ESLint parser for TypeScript
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",  // Uses the recommended rules from the @typescript-eslint/eslint-plugin
    "plugin:prettier/recommended"  // Enables eslint-plugin-prettier and eslint-config-prettier
  ],
  "plugins": ["@typescript-eslint"],  // Adds TypeScript plugin
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn",  // Example custom rule to warn on unused variables
    "prettier/prettier": "error"  // Makes Prettier formatting issues show as ESLint errors
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
